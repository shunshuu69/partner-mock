{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    // ✅ Enable library type checking
    "skipLibCheck": false,
    // ✅ Enable stricter type checks
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  }
}
